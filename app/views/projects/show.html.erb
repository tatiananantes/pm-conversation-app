<p style="color: green"><%= notice %></p>

<%= render @project %>
<br>

<h2>Project's Comments</h2>

<ul>
<% @project.comments.each do |comment| %> 
  <li> <%= render comment %> </li>
  <% if current_user == comment.user %>
      <%= link_to "Edit Comment", edit_project_comment_path(@project, comment) %>
    <% end %>
  <% end %>
</ul>

<%= button_to "Add Comment", new_project_comment_path(@project), method: :get, class: "btn btn-primary" %>

<br>
<div>
  <%= link_to "Edit this project", edit_project_path(@project) %> |
  <%= link_to "Back to projects", projects_path %>
</div>

<br>
 <%= button_to "Delete this project", @project, method: :delete %>
